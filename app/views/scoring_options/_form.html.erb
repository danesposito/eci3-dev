<%= simple_form_for(@scoring_option) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :indicator_id %>
    <%= f.input :description %>
    <%= f.input :value %>
    <%= f.input :not_applicable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
