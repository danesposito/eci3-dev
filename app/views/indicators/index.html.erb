<p id="notice"><%= notice %></p>

<h1>Listing Indicators</h1>
<%= link_to 'Add an Indicator', new_indicator_path, class: 'right btn btn-info btn-xs'  %>
<hr>
<div class="row">
  <% @indicators.each do |indicator| %>
  <div class="col-lg-12">
    <div class="panel panel-default" id="<%= indicator.id %>">
      <div class="panel-heading">
        <div class="panel-body" style="float:right;">
          <%= link_to '<i class="fa fa-fw fa-eye"></i>'.html_safe, indicator, class: 'btn btn-info btn-xs' %>
          <%= link_to '<i class="fa fa-fw fa-pencil"></i>'.html_safe, edit_indicator_path(indicator), class: 'btn btn-info btn-xs' %>
          <%= link_to '<i class="fa fa-fw fa-close"></i>'.html_safe, indicator, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%>
        </div>
        <h4><%= indicator.reporting_cycle.name %> - <%= indicator.id %></h4> 
        
      </div>
      <div class="panel-body">
        <ul class="list-group">
        
       <li class="list-group-item"><strong>Indicator Type:</strong> <span class="right"> <%= indicator.indicator_type.name %></span></li>
        <li class="list-group-item"><strong>Record Type:</strong> <span class="right"> <%= indicator.record_type.name %></span></li>
        <li class="list-group-item"><strong>Parent:</strong> <span class="right"> <%= indicator.parent_id %></span></li>
        <li class="list-group-item"><strong>Question #:</strong> <span class="right"> <%= indicator.question_number %></span></li>
        <li class="list-group-item"><strong>Indicator #:</strong> <span class="right"> <%= indicator.indicator_number %></span></li>
       <li class="list-group-item"><strong>Question Text:</strong> <span class="right"><%= indicator.question_text %></span></li>
        <li class="list-group-item"><strong>Indicator Text:</strong> <span class="right"><%= indicator.indicator_text %></span></li>
        <li class="list-group-item"><strong>Prior Cycle:</strong> <span class="right"><%= indicator.prior_cycle %></span></li>
       <li class="list-group-item"><strong>Prior Question #:</strong> <span class="right"><%= indicator.prior_question %></span></li>
       </ul>

                  <div class="panel-footer">
                  <% indicator.scoring_options.each do |scoring_option| %>
                    <%= link_to scoring_option.description, scoring_option, class: 'small' %>
                    -
                    <%= link_to scoring_option.value, scoring_option, class: 'small' %>  
                    
                    <span class="small">
                    <%= scoring_option.not_applicable? ? "- Not Applicable" : "" %>
                    </span>
              
          <br>
                  <% end %></div>
        
      </div>
      
    </div>
  </div>
  <% end %>
</div>

<br>

