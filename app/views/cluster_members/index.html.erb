<p id="notice"><%= notice %></p>

<h1>Listing Cluster Members</h1>
<%= link_to 'Add New Cluster Member', new_cluster_member_path, class: 'right btn btn-info btn-xs'  %>
<hr>
<div class="row">
  <% @cluster_members.each do |cluster_member| %>
  <div class="col-lg-4">
    <div class="panel panel-default" id="<%= cluster_member.id %>">
      <div class="panel-heading">
        <div class="panel-body" style="float:right;">
          <%= link_to '<i class="fa fa-fw fa-eye"></i>'.html_safe, cluster_member, class: 'btn btn-info btn-xs' %>
          <%= link_to '<i class="fa fa-fw fa-pencil"></i>'.html_safe, edit_cluster_member_path(cluster_member), class: 'btn btn-info btn-xs' %>
          <%= link_to '<i class="fa fa-fw fa-close"></i>'.html_safe, cluster_member, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'%>
        </div>
        <h4>Cluster/Convention Pair: <%= cluster_member.id %></h4> 
        
      </div>
      <div class="panel-body">


        <p><%= cluster_member.cluster.name %></p>
        <hr>
        <p><%= cluster_member.convention.name %></p>

        
      </div>
      
    </div>
  </div>
  <% end %>
</div>

<br>

