<div class="row">

  <div class="col-lg-6">

    <%= form_for(@country) do |f| %>
      <% if @country.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

          <ul>
          <% @country.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, :class=>'form-control' %>
         <p class="help-block">Example block-level help text here.</p>
      </div>
     <div class="form-group">
        <%= f.label :alternative_name %><br>
        <%= f.text_field :alternative_name, :class=>'form-control' %>
      </div>
     <div class="form-group">
        <%= f.label :country_code %><br>
        <%= f.text_field :country_code, :class=>'form-control' %>
      </div>
     <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class=>'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
  </div>
</div>

