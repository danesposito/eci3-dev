<%= simple_form_for @country do |f| %>
        <%= f.input :name %>
        <%= f.input :population %>
        <%= f.input :population_growth %>
        <%= f.input :area %>
        <%= f.input :gdp %>
        <%= f.input :gdp_per_capita %>
        <%= f.input :iso_code_2 %>
        <%= f.input :iso_code_3 %>
        <%= f.input :country_numeric %>
        <%= f.input :threatened_species %>
        <%= f.input :forested_area %>
        <%= f.input :co2_emission %>
        <%= f.input :co2_per_capita %>
        <%= f.input :agriculture_production %>
        <%= f.association :regions, as: :check_boxes %>
        <%= f.button :submit %>
<% end %>

